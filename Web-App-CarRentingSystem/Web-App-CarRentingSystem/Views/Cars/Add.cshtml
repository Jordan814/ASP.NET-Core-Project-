@model AddCarFromModel

@{
    ViewData["Title"] = "Add Car";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h2>Add Car</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Brand">Enter Brand</label>
                    <input asp-for="Brand" class="form-control" placeholder="Audi">
                    <span asp-validation-for="Brand" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model">Enter Model</label>
                    <input asp-for="Model" class="form-control" placeholder="A4">
                    <span asp-validation-for="Model" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" rows="3" class="form-control" placeholder="This car is the perfect one for you because..."></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image">Image</label>
                    <input asp-for="Image" class="form-control" placeholder="Your Url here...">
                    <span asp-validation-for="Image" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year">Year</label>
                    <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                    <span asp-validation-for="Year" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="small text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary" value="Save"></input>
            </form>
        </div>
    </div>
</div>
